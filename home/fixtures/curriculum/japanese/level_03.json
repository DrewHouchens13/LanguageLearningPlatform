      "flashcards": [
        {"front": "Next stop", "back": "次は (つぎは / Tsugi wa)", "order": 1},
        {"front": "Platform", "back": "ホーム / 番線 (Hōmu / Bansen)", "order": 2},
        {"front": "Departure", "back": "出発 (しゅっぱつ / Shuppatsu)", "order": 3},
        {"front": "Arrival", "back": "到着 (とうちゃく / Tōchaku)", "order": 4},
        {"front": "Ticket", "back": "切符 (きっぷ / Kippu)", "order": 5}
      ],
      "quiz_questions": [
